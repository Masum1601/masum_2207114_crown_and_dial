<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.final_project_114.WatchDetailsController"
            style="-fx-background-color: #f8f9fa;">

    <!-- ================= TOP BAR ================= -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20"
              style="-fx-background-color: #1a1a2e; -fx-padding: 18;">

            <Button text="â† Back"
                    onAction="#handleBackToDashboard"
                    style="-fx-background-color: #2563eb;
                           -fx-text-fill: white;
                           -fx-padding: 10 20;
                           -fx-background-radius: 25;
                           -fx-cursor: hand;
                           -fx-font-weight: bold;"/>

            <Label text="âŒš Watch Details"
                   style="-fx-text-fill: #1e90ff;
                          -fx-font-size: 28px;
                          -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- ================= CENTER CONTENT ================= -->
    <center>
        <ScrollPane fitToWidth="true"
                    style="-fx-background-color: transparent;">

            <VBox spacing="30" style="-fx-padding: 40;">
                <HBox spacing="40" alignment="TOP_CENTER">

                    <!-- IMAGE SECTION -->
                    <VBox alignment="CENTER" spacing="15"
                          style="-fx-background-color: white;
                                 -fx-background-radius: 15;
                                 -fx-padding: 30;
                                 -fx-border-color: #2563eb;
                                 -fx-border-width: 2;
                                 -fx-border-radius: 15;">

                        <ImageView fx:id="watchImageView"
                                   fitWidth="400"
                                   fitHeight="400"
                                   preserveRatio="true"/>
                    </VBox>

                    <!-- DETAILS SECTION -->
                    <VBox spacing="20"
                          prefWidth="500"
                          style="-fx-background-color: white;
                                 -fx-background-radius: 15;
                                 -fx-padding: 30;
                                 -fx-border-color: #2563eb;
                                 -fx-border-width: 2;
                                 -fx-border-radius: 15;">

                        <Label fx:id="watchNameLabel"
                               text="Watch Name"
                               style="-fx-font-size: 32px;
                                      -fx-font-weight: bold;
                                      -fx-text-fill: #1a1a2e;"/>

                        <Label fx:id="watchBrandLabel"
                               text="Brand: Unknown"
                               style="-fx-font-size: 18px;
                                      -fx-text-fill: #64748b;"/>

                        <Label fx:id="watchPriceLabel"
                               text="0.00"
                               style="-fx-font-size: 36px;
                                      -fx-font-weight: bold;
                                      -fx-text-fill: #27ae60;"/>

                        <HBox spacing="15">
                            <Label fx:id="watchCategoryLabel"
                                   text="Category: N/A"
                                   style="-fx-font-size: 14px;
                                          -fx-text-fill: #475569;
                                          -fx-background-color: #e2e8f0;
                                          -fx-padding: 8 15;
                                          -fx-background-radius: 20;"/>

                            <Label fx:id="watchStockLabel"
                                   text="In Stock"
                                   style="-fx-font-size: 14px;
                                          -fx-text-fill: #059669;
                                          -fx-background-color: #d1fae5;
                                          -fx-padding: 8 15;
                                          -fx-background-radius: 20;"/>
                        </HBox>

                        <Separator/>

                        <VBox spacing="10">
                            <Label text="Description:"
                                   style="-fx-font-size: 16px;
                                          -fx-font-weight: bold;
                                          -fx-text-fill: #1a1a2e;"/>

                            <TextArea fx:id="watchDescriptionArea"
                                      editable="false"
                                      wrapText="true"
                                      prefRowCount="5"
                                      style="-fx-font-size: 14px;
                                             -fx-text-fill: #475569;"/>
                        </VBox>

                        <Separator/>

                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <Label text="Quantity:"
                                   style="-fx-font-size: 16px;
                                          -fx-font-weight: bold;
                                          -fx-text-fill: #1a1a2e;"/>
                            <Spinner fx:id="quantitySpinner" prefWidth="100"/>
                        </HBox>

                        <GridPane hgap="15" vgap="10">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="50"/>
                                <ColumnConstraints percentWidth="50"/>
                            </columnConstraints>

                            <Button text="ðŸ›’ Add to Cart"
                                    GridPane.columnIndex="0"
                                    maxWidth="Infinity"
                                    onAction="#handleAddToCart"
                                    style="-fx-background-color: #2563eb;
                                           -fx-text-fill: white;
                                           -fx-font-size: 16px;
                                           -fx-font-weight: bold;
                                           -fx-padding: 15 30;
                                           -fx-background-radius: 10;
                                           -fx-cursor: hand;"/>

                            <Button text="â¤ï¸ Add to Wishlist"
                                    GridPane.columnIndex="1"
                                    maxWidth="Infinity"
                                    onAction="#handleAddToWishlist"
                                    style="-fx-background-color: #e74c3c;
                                           -fx-text-fill: white;
                                           -fx-font-size: 16px;
                                           -fx-font-weight: bold;
                                           -fx-padding: 15 30;
                                           -fx-background-radius: 10;
                                           -fx-cursor: hand;"/>
                        </GridPane>

                    </VBox>
                </HBox>
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
