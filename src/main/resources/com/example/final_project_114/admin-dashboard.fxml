                                <Label text="Total Value" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <!-- Watch Management Section -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="15">
                            <children>
                                <Label text="Watch Inventory" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Button text="âž• Add New Watch" onAction="#handleAddWatch"
