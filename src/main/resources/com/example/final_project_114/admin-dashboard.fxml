<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.final_project_114.AdminDashboardController"
            style="-fx-background: linear-gradient(to bottom, #f8f9fa, #e9ecef);">

    <!-- Top Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background: linear-gradient(to right, #1a1a2e, #16213e); -fx-padding: 18; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 3);">
            <children>
                <Label text="âš™ï¸ Admin Dashboard" style="-fx-text-fill: #1e90ff; -fx-font-size: 28px; -fx-font-weight: bold; -fx-letter-spacing: 1.5;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="adminLabel" text="Admin" style="-fx-text-fill: #FFFFFF; -fx-font-size: 15px; -fx-font-weight: bold; -fx-padding: 5 10;"/>
                <Button text="Logout" onAction="#handleLogout"
                        style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 25; -fx-cursor: hand;"/>
            </children>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30;">
            <children>

                <!-- Statistics Cards -->
                <HBox spacing="20" alignment="CENTER">
                    <children>
                        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-pref-width: 200; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                            <children>
                                <Label text="ðŸ“¦" style="-fx-font-size: 40px;"/>
                                <Label fx:id="totalWatchesLabel" text="0" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #3498db;"/>
                                <Label text="Total Watches" style="-fx-font-size: 13px; -fx-text-fill: #5a6c7d; -fx-font-weight: 600;"/>
                            </children>
                        </VBox>

                        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-pref-width: 200; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                            <children>
                                <Label text="ðŸ‘¥" style="-fx-font-size: 40px;"/>
                                <Label fx:id="totalUsersLabel" text="0" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
                                <Label text="Total Users" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                            </children>
                        </VBox>

                        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-pref-width: 200; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                            <children>
                                <Label text="ðŸ’°" style="-fx-font-size: 40px;"/>
                                <Label fx:id="totalRevenueLabel" text="0.00" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #e67e22;"/>
                                <Label text="Total Revenue" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                            </children>
                        </VBox>

                        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-pref-width: 200; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                            <children>
                                <Label text="ðŸ“‹" style="-fx-font-size: 40px;"/>
                                <Label fx:id="totalOrdersLabel" text="0" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #9b59b6;"/>
                                <Label text="Total Orders" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <!-- Tab Pane for Watches and Orders -->
                <TabPane fx:id="mainTabPane" style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 12, 0, 0, 3); -fx-border-color: #2563eb; -fx-border-width: 1; -fx-border-radius: 12;">
                    <tabs>
                        <!-- Watch Management Tab -->
                        <Tab text="ðŸ“¦ Watch Inventory" closable="false">
                            <content>
                                <VBox spacing="15" style="-fx-padding: 25;">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="15">
                                            <children>
                                                <Label text="Watch Inventory" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-letter-spacing: 0.5;"/>
                                                <Region HBox.hgrow="ALWAYS"/>
                                                <Button text="âž• Add New Watch" onAction="#handleAddWatch"
                                                        style="-fx-background-color: linear-gradient(to right, #2563eb, #1e40af); -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(30, 64, 175, 0.4), 8, 0, 0, 2);"/>
                                            </children>
                                        </HBox>

                                        <TableView fx:id="watchTable" prefHeight="400">
                                            <columns>
                                                <TableColumn fx:id="idColumn" text="ID" prefWidth="50" />
                                                <TableColumn fx:id="nameColumn" text="Name" prefWidth="150" />
                                                <TableColumn fx:id="brandColumn" text="Brand" prefWidth="120" />
                                                <TableColumn fx:id="priceColumn" text="Price" prefWidth="100" />
                                                <TableColumn fx:id="stockColumn" text="Stock" prefWidth="80" />
                                                <TableColumn fx:id="categoryColumn" text="Category" prefWidth="100" />
                                                <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="180" />
                                            </columns>
                                        </TableView>
                                    </children>
                                </VBox>
                            </content>
                        </Tab>

                        <!-- Order Management Tab -->
                        <Tab text="ðŸ“‹ Order Management" closable="false">
                            <content>
                                <VBox spacing="15" style="-fx-padding: 25;">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="15">
                                            <children>
                                                <Label text="Customer Orders" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-letter-spacing: 0.5;"/>
                                            </children>
                                        </HBox>

                                        <TableView fx:id="ordersTable" prefHeight="400">
                                            <columns>
                                                <TableColumn fx:id="orderIdColumn" text="Order ID" prefWidth="80" />
                                                <TableColumn fx:id="customerColumn" text="Customer" prefWidth="150" />
                                                <TableColumn fx:id="orderDateColumn" text="Date" prefWidth="180" />
                                                <TableColumn fx:id="orderTotalColumn" text="Total" prefWidth="120" />
                                                <TableColumn fx:id="orderStatusColumn" text="Status" prefWidth="120" />
                                                <TableColumn fx:id="orderActionsColumn" text="Actions" prefWidth="180" />
                                            </columns>
                                        </TableView>
                                    </children>
                                </VBox>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>

            </children>
        </VBox>
    </center>

</BorderPane>