<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.final_project_114.RegisterController">

    <center>
        <StackPane>
            <children>
                <VBox alignment="CENTER" maxHeight="650" maxWidth="450" spacing="18" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 3);">

                    <padding>
                        <Insets bottom="40" left="50" right="50" top="40" />
                    </padding>

                    <children>

                        <VBox alignment="CENTER" spacing="8">
                            <children>
                                <Label style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="CREATE ACCOUNT" />
                                <Label style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" text="Join our luxury watch collection" />
                            </children>
                        </VBox>

                        <VBox spacing="8">
                            <children>
                                <Label style="-fx-font-size: 13px; -fx-text-fill: #34495e; -fx-font-weight: bold;" text="Username" />
                                <TextField fx:id="usernameField" promptText="Choose a username" style="-fx-font-size: 14px; -fx-padding: 12; -fx-background-radius: 5; -fx-border-color: #dfe6e9; -fx-border-radius: 5;" />
                            </children>
                        </VBox>

                        <VBox spacing="8">
                            <children>
                                <Label style="-fx-font-size: 13px; -fx-text-fill: #34495e; -fx-font-weight: bold;" text="Email Address" />
                                <TextField fx:id="emailField" promptText="Enter your email" style="-fx-font-size: 14px; -fx-padding: 12; -fx-background-radius: 5; -fx-border-color: #dfe6e9; -fx-border-radius: 5;" />
                            </children>
                        </VBox>

                        <VBox spacing="8">
                            <children>
                                <Label style="-fx-font-size: 13px; -fx-text-fill: #34495e; -fx-font-weight: bold;" text="Password" />
                                <PasswordField fx:id="passwordField" promptText="Create a password" style="-fx-font-size: 14px; -fx-padding: 12; -fx-background-radius: 5; -fx-border-color: #dfe6e9; -fx-border-radius: 5;" />
                            </children>
                        </VBox>

                        <VBox spacing="8">
                            <children>
                                <Label style="-fx-font-size: 13px; -fx-text-fill: #34495e; -fx-font-weight: bold;" text="Confirm Password" />
                                <PasswordField fx:id="confirmPasswordField" promptText="Re-enter your password" style="-fx-font-size: 14px; -fx-padding: 12; -fx-background-radius: 5; -fx-border-color: #dfe6e9; -fx-border-radius: 5;" />
                            </children>
                        </VBox>

                        <Label fx:id="messageLabel" style="-fx-font-size: 12px;" wrapText="true" />

                        <Button fx:id="registerButton" maxWidth="Infinity" onAction="#handleRegister" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold; -fx-padding: 14; -fx-cursor: hand; -fx-background-radius: 5;" text="REGISTER">
                            <cursor>
                                <javafx.scene.Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>

                        <HBox alignment="CENTER" spacing="5">
                            <children>
                                <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 13px;" text="Already have an account?" />
                                <Hyperlink onAction="#handleBackToLogin" style="-fx-text-fill: #3498db; -fx-font-size: 13px; -fx-font-weight: bold;" text="Login here" />
                            </children>
                        </HBox>

                    </children>
                </VBox>
            </children>
        </StackPane>
    </center>

</BorderPane>
