<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.final_project_114.RegisterController"
            style="-fx-background-color: #f5f5f5;">

    <center>
        <StackPane>
            <children>
                <VBox alignment="CENTER" spacing="18" maxWidth="450" maxHeight="650"
                      style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 3);">

                    <padding>
                        <Insets top="40" right="50" bottom="40" left="50"/>
                    </padding>

                    <children>

                        <VBox alignment="CENTER" spacing="8">
                            <children>
                                <Label text="âŒš" style="-fx-font-size: 48px;"/>
                                <Label text="CREATE ACCOUNT" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                                <Label text="Join our luxury watch collection" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                            </children>
                        </VBox>

                        <VBox spacing="8">
                            <children>
                                <Label text="Username" style="-fx-font-size: 13px; -fx-text-fill: #34495e; -fx-font-weight: bold;"/>
                                <TextField fx:id="usernameField" promptText="Choose a username"
                                           style="-fx-font-size: 14px; -fx-padding: 12; -fx-background-radius: 5; -fx-border-color: #dfe6e9; -fx-border-radius: 5;"/>
                            </children>
                        </VBox>

                        <VBox spacing="8">
                            <children>
                                <Label text="Email Address" style="-fx-font-size: 13px; -fx-text-fill: #34495e; -fx-font-weight: bold;"/>
                                <TextField fx:id="emailField" promptText="Enter your email"
                                           style="-fx-font-size: 14px; -fx-padding: 12; -fx-background-radius: 5; -fx-border-color: #dfe6e9; -fx-border-radius: 5;"/>
                            </children>
                        </VBox>

                        <VBox spacing="8">
                            <children>
                                <Label text="Password" style="-fx-font-size: 13px; -fx-text-fill: #34495e; -fx-font-weight: bold;"/>
                                <PasswordField fx:id="passwordField" promptText="Create a password"
                                               style="-fx-font-size: 14px; -fx-padding: 12; -fx-background-radius: 5; -fx-border-color: #dfe6e9; -fx-border-radius: 5;"/>
                            </children>
                        </VBox>

                        <VBox spacing="8">
                            <children>
                                <Label text="Confirm Password" style="-fx-font-size: 13px; -fx-text-fill: #34495e; -fx-font-weight: bold;"/>
                                <PasswordField fx:id="confirmPasswordField" promptText="Re-enter your password"
                                               style="-fx-font-size: 14px; -fx-padding: 12; -fx-background-radius: 5; -fx-border-color: #dfe6e9; -fx-border-radius: 5;"/>
                            </children>
                        </VBox>

                        <Label fx:id="messageLabel" wrapText="true" style="-fx-font-size: 12px;"/>

                        <Button fx:id="registerButton" text="REGISTER" maxWidth="Infinity" onAction="#handleRegister"
                                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold; -fx-padding: 14; -fx-cursor: hand; -fx-background-radius: 5;">
                            <cursor>
                                <javafx.scene.Cursor fx:constant="HAND"/>
                            </cursor>
                        </Button>

                        <HBox alignment="CENTER" spacing="5">
                            <children>
                                <Label text="Already have an account?" style="-fx-text-fill: #7f8c8d; -fx-font-size: 13px;"/>
                                <Hyperlink text="Login here" onAction="#handleBackToLogin"
                                           style="-fx-text-fill: #3498db; -fx-font-size: 13px; -fx-font-weight: bold;"/>
                            </children>
                        </HBox>

                    </children>
                </VBox>
            </children>
        </StackPane>
    </center>

</BorderPane>
