<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background: linear-gradient(to bottom right, #1a1a2e, #16213e, #0f3460);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.final_project_114.LoginController">

    <center>
        <StackPane>
            <children>
                <VBox alignment="CENTER" maxHeight="550" maxWidth="400" spacing="20" style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 20, 0, 0, 5); -fx-border-color: rgba(218, 165, 32, 0.3); -fx-border-width: 1; -fx-border-radius: 15;">
                    <padding>
                        <Insets bottom="50" left="50" right="50" top="50" />
                    </padding>
                    <children>

                        <VBox alignment="CENTER" spacing="8">
                            <children>
                                <Label text="âŒš" style="-fx-font-size: 48px;"/>
                                <Label style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2563eb; -fx-effect: dropshadow(gaussian, rgba(37, 99, 235, 0.3), 3, 0, 0, 1);" text="Crown &amp; Dial" />
                                <Label style="-fx-font-size: 14px; -fx-text-fill: #5a6c7d; -fx-font-weight: 500;" text="Sign in to your account" />
                            </children>
                        </VBox>

                        <VBox spacing="8">
                            <children>
                                <Label style="-fx-font-size: 13px; -fx-text-fill: #34495e; -fx-font-weight: bold;" text="Username" />
                                <TextField fx:id="usernameField" promptText="Enter your username" style="-fx-font-size: 14px; -fx-padding: 12; -fx-background-radius: 8; -fx-border-color: #2563eb; -fx-border-width: 1.5; -fx-border-radius: 8; -fx-background-color: white;" />
                            </children>
                        </VBox>

                        <VBox spacing="8">
                            <children>
                                <Label style="-fx-font-size: 13px; -fx-text-fill: #34495e; -fx-font-weight: bold;" text="Password" />
                                <PasswordField fx:id="passwordField" promptText="Enter your password" style="-fx-font-size: 14px; -fx-padding: 12; -fx-background-radius: 8; -fx-border-color: #2563eb; -fx-border-width: 1.5; -fx-border-radius: 8; -fx-background-color: white;" />
                            </children>
                        </VBox>

                        <Label fx:id="messageLabel" style="-fx-font-size: 12px;" textFill="RED" wrapText="true" />

                        <Button fx:id="loginButton" maxWidth="Infinity" onAction="#handleLogin" style="-fx-background-color: linear-gradient(to right, #2563eb, #1e40af); -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 15; -fx-cursor: hand; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(37, 99, 235, 0.4), 10, 0, 0, 2);" text="LOGIN">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>

                        <HBox alignment="CENTER" spacing="10">
                            <children>
                                <Separator HBox.hgrow="ALWAYS" />
                                <Label style="-fx-text-fill: #95a5a6; -fx-font-size: 12px;" text="OR" />
                                <Separator HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>

                        <Button maxWidth="Infinity" onAction="#handleRegister" style="-fx-background-color: transparent; -fx-text-fill: #1a1a2e; -fx-font-size: 13px; -fx-border-color: #2563eb; -fx-border-width: 2; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 12; -fx-cursor: hand; -fx-font-weight: bold;" text="Create New Account">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>

                    </children>
                </VBox>
            </children>
        </StackPane>
    </center>

</BorderPane>
