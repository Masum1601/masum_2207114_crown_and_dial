<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.final_project_114.WishlistController"
            style="-fx-background-color: #f5f5f5;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <children>
                <Label text="â¤ï¸ My Wishlist" style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="userLabel" text="User" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                <Button text="Continue Shopping" onAction="#handleContinueShopping"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 8 20; -fx-background-radius: 20; -fx-cursor: hand;"/>
                <Button text="Logout" onAction="#handleLogout"
                        style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-padding: 8 20; -fx-background-radius: 20; -fx-cursor: hand;"/>
            </children>
        </HBox>
    </top>

    <center>
        <VBox spacing="20" style="-fx-padding: 30;">
            <children>

                <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="15">
                            <children>
                                <Label text="Your Wishlist" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Label text="ðŸ’¡ Tip: Move items to cart when they're in stock!"
                                       style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px; -fx-font-style: italic;"/>
                            </children>
                        </HBox>

                        <TableView fx:id="wishlistTable" prefHeight="400">
                            <columns>
                                <TableColumn fx:id="nameColumn" text="Watch Name" prefWidth="200" />
                                <TableColumn fx:id="brandColumn" text="Brand" prefWidth="120" />
                                <TableColumn fx:id="priceColumn" text="Price" prefWidth="100" />
                                <TableColumn fx:id="categoryColumn" text="Category" prefWidth="100" />
                                <TableColumn fx:id="stockColumn" text="Stock" prefWidth="80" />
                                <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="220" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>

                <HBox spacing="20" alignment="CENTER">
                    <children>
                        <!-- Total Items Card -->
                        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-pref-width: 300; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                            <children>
                                <Label text="â¤ï¸" style="-fx-font-size: 40px;"/>
                                <Label fx:id="totalItemsLabel" text="0" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>
                                <Label text="Items in Wishlist" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <HBox spacing="15" alignment="CENTER">
                    <children>
                        <Button text="Clear Wishlist" onAction="#handleClearWishlist"
                                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 15px; -fx-padding: 12 30; -fx-background-radius: 5; -fx-cursor: hand; -fx-font-weight: bold;"/>
                    </children>
                </HBox>

            </children>
        </VBox>
    </center>

</BorderPane>