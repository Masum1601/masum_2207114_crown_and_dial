<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.final_project_114.CartController"
            style="-fx-background: linear-gradient(to bottom, #f8f9fa, #e9ecef);">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background: linear-gradient(to right, #1a1a2e, #16213e); -fx-padding: 18; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 3);">
            <children>
                <Label text="ðŸ›’ Shopping Cart" style="-fx-text-fill: #1e90ff; -fx-font-size: 28px; -fx-font-weight: bold; -fx-letter-spacing: 1.5;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="userLabel" text="User" style="-fx-text-fill: #FFFFFF; -fx-font-size: 15px; -fx-font-weight: bold; -fx-padding: 5 10;"/>
                <Button text="Continue Shopping" onAction="#handleContinueShopping"
                        style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 25; -fx-cursor: hand; -fx-font-weight: bold;"/>
                <Button text="Logout" onAction="#handleLogout"
                        style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 25; -fx-cursor: hand;"/>
            </children>
        </HBox>
    </top>

    <center>
        <VBox spacing="20" style="-fx-padding: 30;">
            <children>

                <VBox spacing="15" style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-background-radius: 12; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 12, 0, 0, 3); -fx-border-color: #2563eb; -fx-border-width: 1; -fx-border-radius: 12;">
                    <children>
                        <Label text="Your Cart Items" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-letter-spacing: 0.5;"/>

                        <TableView fx:id="cartTable" prefHeight="400">
                            <columns>
                                <TableColumn fx:id="nameColumn" text="Watch Name" prefWidth="200" />
                                <TableColumn fx:id="brandColumn" text="Brand" prefWidth="120" />
                                <TableColumn fx:id="priceColumn" text="Price" prefWidth="100" />
                                <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="80" />
                                <TableColumn fx:id="subtotalColumn" text="Subtotal" prefWidth="100" />
                                <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="180" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>

                <HBox spacing="20" alignment="CENTER">
                    <children>
                        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-background-radius: 12; -fx-padding: 35; -fx-pref-width: 250; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 12, 0, 0, 3); -fx-border-color: #2563eb; -fx-border-width: 1; -fx-border-radius: 12;">
                            <children>
                                <Label text="ðŸ“¦" style="-fx-font-size: 40px;"/>
                                <Label fx:id="totalItemsLabel" text="0" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #1a1a2e;"/>
                                <Label text="Total Items" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                            </children>
                        </VBox>

                        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-background-radius: 12; -fx-padding: 35; -fx-pref-width: 250; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 12, 0, 0, 3); -fx-border-color: #2563eb; -fx-border-width: 1; -fx-border-radius: 12;">
                            <children>
                                <Label text="ðŸ’°" style="-fx-font-size: 40px;"/>
                                <Label fx:id="totalPriceLabel" text="0.00" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #2563eb;"/>
                                <Label text="Total Price" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <HBox spacing="15" alignment="CENTER">
                    <children>
                        <Button text="Clear Cart" onAction="#handleClearCart"
                                style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-size: 15px; -fx-padding: 14 35; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-weight: bold;"/>

                        <Button text="Proceed to Checkout" onAction="#handleCheckout"
                                style="-fx-background-color: linear-gradient(to right, #2563eb, #1e40af); -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 14 45; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(37, 99, 235, 0.4), 10, 0, 0, 2);"/>
                    </children>
                </HBox>

            </children>
        </VBox>
    </center>

</BorderPane>