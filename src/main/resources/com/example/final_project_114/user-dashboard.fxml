                <Region HBox.hgrow="ALWAYS"/>

                <TextField fx:id="searchField" promptText="Search luxury watches..."
                           style="-fx-pref-width: 280px; -fx-background-radius: 25; -fx-padding: 10 20; -fx-background-color: rgba(255,255,255,0.95); -fx-border-color: #2563eb; -fx-border-width: 1; -fx-border-radius: 25;"/>

                <Button text="ðŸ”" onAction="#handleSearch"
                        style="-fx-background-color: linear-gradient(to right, #2563eb, #1e40af); -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 25; -fx-cursor: hand; -fx-font-size: 16px;"/>

                <Button fx:id="cartButton" text="ðŸ›’ Cart (0)" onAction="#handleCart"
                        style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 25; -fx-cursor: hand; -fx-font-weight: bold;"/>

                <Button text="â¤ï¸ Wishlist" onAction="#handleWishlist"
                        style="-fx-background-color: #475569; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 25; -fx-cursor: hand; -fx-font-weight: bold;"/>

                <Button text="ðŸ“¦ Orders" onAction="#handleOrders"
