            </children>
        </HBox>
    </top>

    <left>
        <VBox spacing="12" style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-padding: 25; -fx-pref-width: 220; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 3, 0); -fx-border-color: #2563eb; -fx-border-width: 0 1 0 0;">
            <children>
                <Label text="Categories" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1a1a2e;"/>
                <Separator style="-fx-background-color: #2563eb;"/>

