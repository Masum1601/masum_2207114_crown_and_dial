<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.final_project_114.UserDashboardController"
            style="-fx-background-color: #f5f5f5;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <children>
                <Label text="âŒš Crown &amp; Dial" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>

                <Region HBox.hgrow="ALWAYS"/>

                <TextField fx:id="searchField" promptText="Search watches..."
                           style="-fx-pref-width: 250px; -fx-background-radius: 20; -fx-padding: 8 15;"/>

                <Button text="ðŸ” Search" onAction="#handleSearch"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 8 20; -fx-background-radius: 20; -fx-cursor: hand;"/>

                <Button fx:id="cartButton" text="ðŸ›’ Cart (0)" onAction="#handleCart"
                        style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-padding: 8 20; -fx-background-radius: 20; -fx-cursor: hand;"/>

                <Button text="â¤ï¸ Wishlist" onAction="#handleWishlist"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 8 20; -fx-background-radius: 20; -fx-cursor: hand;"/>

                <Label fx:id="userLabel" text="User" style="-fx-text-fill: white; -fx-font-size: 14px;"/>

                <Button text="Logout" onAction="#handleLogout"
                        style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-padding: 8 20; -fx-background-radius: 20; -fx-cursor: hand;"/>
            </children>
        </HBox>
    </top>

    <left>
        <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-pref-width: 200;">
            <children>
                <Label text="Categories" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Separator/>

                <Button text="All Watches" onAction="#filterAll" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #34495e; -fx-alignment: CENTER_LEFT; -fx-cursor: hand;"/>

                <Button text="Luxury" onAction="#filterLuxury" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #34495e; -fx-alignment: CENTER_LEFT; -fx-cursor: hand;"/>

                <Button text="Sport" onAction="#filterSport" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #34495e; -fx-alignment: CENTER_LEFT; -fx-cursor: hand;"/>

                <Button text="Classic" onAction="#filterClassic" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #34495e; -fx-alignment: CENTER_LEFT; -fx-cursor: hand;"/>

                <Button text="Smart" onAction="#filterSmart" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #34495e; -fx-alignment: CENTER_LEFT; -fx-cursor: hand;"/>
            </children>
        </VBox>
    </left>

    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <children>
                        <Label text="Available Watches" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <ComboBox fx:id="sortComboBox" promptText="Sort by" onAction="#handleSort"
                                  style="-fx-pref-width: 150px;"/>
                    </children>
                </HBox>

                <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-border-color: transparent;">
                    <content>
                        <FlowPane fx:id="watchContainer" hgap="20" vgap="20" style="-fx-padding: 10;"/>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </center>

</BorderPane>