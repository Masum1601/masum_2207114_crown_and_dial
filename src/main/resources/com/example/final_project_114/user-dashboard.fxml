                <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-background: transparent;">
                    <content>
                        <FlowPane fx:id="watchContainer" hgap="25" vgap="25" style="-fx-padding: 15;"/>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </center>

</BorderPane>