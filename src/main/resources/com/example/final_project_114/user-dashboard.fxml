                <Button text="ðŸ“± Smart" onAction="#filterSmart" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #1a1a2e; -fx-alignment: CENTER_LEFT; -fx-cursor: hand; -fx-font-size: 14px; -fx-padding: 10; -fx-border-radius: 5; -fx-background-radius: 5;"/>
            </children>
        </VBox>
    </left>

    <center>
        <VBox spacing="25" style="-fx-padding: 25;">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2); -fx-border-color: #2563eb; -fx-border-width: 1; -fx-border-radius: 10;">
                    <children>
                        <Label text="Our Collection" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #1a1a2e;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <ComboBox fx:id="sortComboBox" promptText="Sort by" onAction="#handleSort"
                                  style="-fx-pref-width: 180px; -fx-background-radius: 8; -fx-border-color: #2563eb; -fx-border-radius: 8;"/>
                    </children>
