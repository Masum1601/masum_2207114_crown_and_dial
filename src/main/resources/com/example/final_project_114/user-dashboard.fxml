<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.final_project_114.UserDashboardController"
            style="-fx-background: linear-gradient(to bottom, #f8f9fa, #e9ecef);">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background: linear-gradient(to right, #1a1a2e, #16213e); -fx-padding: 18; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 3);">
